<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    tools:background="@color/backgroundApp">

    <ImageView
        android:id="@+id/img_photo_tvshow"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:scaleType="fitXY"
        tools:src="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/tv_title_tvshow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@android:color/white"
            android:textSize="21sp"
            tools:text="Men in Black: International" />

        <TextView
            android:id="@+id/tv_genre_tvshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/montserrat_regular"
            android:textColor="@android:color/darker_gray"
            tools:text="Action, Adventure, Horror and Documentary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_released_tvshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/darker_gray"
                tools:text="2019" />

            <TextView
                android:id="@+id/tv_duration_tvshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:paddingHorizontal="12dp"
                android:textColor="@android:color/darker_gray"
                tools:text="1h 37min" />

            <TextView
                android:id="@+id/tv_rating_tvshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/darker_gray"
                tools:text="PG-13" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/text_imdb"
                android:textColor="@android:color/white" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="8dp"
                android:src="@drawable/star" />

            <TextView
                android:id="@+id/tv_imdb_tvshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:textColor="@android:color/white"
                tools:text="9.0" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>